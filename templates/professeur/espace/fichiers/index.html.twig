{% extends 'base.html.twig' %}

{% block title %}Fichiers index{% endblock %}

{% block body %}
    <h1>Fichiers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TitreFichier</th>
                <th>DescrFichier</th>
                <th>Fichier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fichier in fichiers %}
            <tr>
                <td>{{ fichier.id }}</td>
                <td>{{ fichier.titreFichier }}</td>
                <td>{{ fichier.descrFichier }}</td>
                <td>{{ fichier.fichier }}</td>
                <td>
                    <a href="{{ path('fichiers_show', {'id': fichier.id}) }}">show</a>
                    <a href="{{ path('fichiers_edit', {'id': fichier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fichiers_new') }}">Create new</a>
{% endblock %}
