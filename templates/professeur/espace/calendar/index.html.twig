{% extends 'base.html.twig' %}

{% block title %}Calendar index{% endblock %}

{% block body %}
    <h3>Emploi du temps</h3>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>
                <td>{{ calendar.id }}</td>
                <td>{{ calendar.title }}</td>
                <td>{{ calendar.start ? calendar.start|date('d-m-Y H:i') : '' }}</td>
                <td>{{ calendar.end ? calendar.end|date('d-m-Y H:i') : '' }}</td>
                <td>{{ calendar.description }}</td>
                <td>
                    <a href="{{ path('calendar_show', {'id': calendar.id}) }}">Voir</a>
                    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucune planification trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('calendar_new') }}">Créer</a>
{% endblock %}
