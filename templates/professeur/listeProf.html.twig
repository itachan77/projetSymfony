{% block title %}ESPACE ADMINISTRATEUR{% endblock %}


{% extends 'menuAdminProf.html.twig' %}

{% block body %}



<div class="container">

            <div class="text-center mb-5"><a class="btn btn-primary none" href="{{ path('prof_insert')}}">AJOUTER UN NOUVEAU PROFESSEUR</a></div>

            <h2 class="text-center">Liste des professeurs</h2>
            <div class="table-responsive-lg">
            <table class="table">
                <thead class="thead-dark">
                    <tr class="text-center">

        <form name="check" action="">
                        <th>
                        <input id="idCheckAll" name="checkAll" data-dechecke="{{ path('deselectionProfTout')}}" data-checke="{{ path('touteSelectionProf')}}" type="checkbox" {{select}} />
                        </th>
                        
                        <th scope="col">PHOTO</th>
                        <th scope="col">NOM</th>
                        <th scope="col">PRENOM</th>
                        <th scope="col">COURS</th>
                        <th scope="col">PARAMETRES</th>
                    </tr>
                </thead>

            <tbody>

            {% for row in professeurs %}
                <tr>
                    <th class="text-center" scope="row">
                        {% if row.selectProf != 0 %}
                        {% set selection = 'checked' %}
                        {% else %}
                        {% set selection = '' %}
                        {% endif %}
                        <label for="check{{row.Id}}"></label>
                        
                        

                            <input id="monId" name="checkName" data-decheck="{{ path('deselectionProf', {'id':row.Id} )}}" data-check="{{ path('selectionProf', {'id':row.Id} )}}" data-id="{{row.Id}}" type="checkbox" {{selection}} />

                        </form>
                    </th>

                    <td class="text-center"><img width="50" class="img-thumbnail" src="{{ asset('images/professeurs/'~ row.photoProf) }}"></img></td>
                    <td class="text-center">{{ row.nomProf }}</td>
                    <td class="text-center">{{ row.prenomProf }}</td>
                    <td class="text-center">
                        {% if row.categories is not null %}                        
                            {% for categ in row.categories %}
                                <div>{{categ.nomCategorie}}</div>
                            {% endfor %}
                        {% endif %}
                        
                    </td>
                    
                    <td class="row">
                        {% if is_granted('ROLE_ADMIN') %}
                        <div class="mx-auto row">
                                <div class="col-sm-12 col-md-4 mr-3"><a title="MODIFIER" class="btn btn-warning none" href="{{ path('prof_update', {'id':row.Id} )}}">Modifier</a></div>
                                <div class="col-sm-12 col-md-4"><a title="SUPPRIMER" class="btn btn-danger none" href="{{ path('prof_delete', {'id':row.Id} )}}">Supprimer</a></div>
                        
                        </div>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            </table>

            
            </div>
</div>



<script src="{{ asset('/js/app_scuola/admin_list.js') }}"></script>
{% endblock %}
