{% extends 'header_scuola.html.twig' %}


{% block title %} Recréez votre mot de passe {% endblock %}


{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/connexion/style_connex.css') }}">
{% endblock %}


{% block body %}

    <div class="container mt-5">

        <div id="connect" class="col-sm-12 w-100 col-md-9 mx-auto boite_perso p-1">

            <div class="row">

                <div class="col-sm-12 text-left">
                    <a class="btn btn-perso" href="{{ path('app_login')}}">Revenir à la page de connexion</a>
                </div>

                <div class="col-sm-12 text-center mb-5 mt-5 pt-3">
                    <h2>Entrez votre nouveau mot de passe :</h2>
                </div>

                <div class="col-sm-12 text-center mb-5 pt-3">
                    {% for message in app.session.flashbag.get('message') %}
                    <span class="alert alert-{{ app.session.get('statut')}}">
                        {{message}}
                    </span>
                    {% endfor %}
                </div>

            </div>


            <div class="row">
                
                <form class="mx-auto" method="post">

                    <div class="row w-50 mx-auto">

                        {{form_start(form_register)}}
                        {{form_errors(form_register)}}
            
                        <div class="col-sm-12">
                        {{form_row(form_register.password.first,{'attr':{'class':'form-control'}})}}
                        </div>

                        <div class="col-sm-12">
                        {{form_row(form_register.password.second,{'attr':{'class':'form-control'}})}}
                        </div>


                        <div class="col-sm-12 text-center py-2">
                        {{form_row(form_register.Valider,{'attr':{'class':'btn bg-dark text-white'}})}}
                        </div>
                        
                        {{form_end(form_register)}} 
                    </div>
                </form>
            </div>


        </div>

    </div>
    
{% endblock body %}







