</head>


<body>    



    <header>

        <div id="admin_login" class="container-fluid">
            <div class="row">
                <div class="col-12 text-right text-white">
                    
                        {% if app.user %}
                        <i class="couleurPerso fas fa-user-check mr-1" title="Vous êtes connecté en tant que {{ app.user.username }} "></i>
                        <span class="couleurPerso">{{ app.user.username }}</span> 
        
                        {% else %}
                        <i><a title="Se Connecter" class="couleurPerso fas fa-user text-perso" href="{{ path('app_login')}}"></a></i>
                        {% endif %}
        
                        {% if app.user %}
        
                        <a href="{{ path('app_logout') }}"><i class="text-danger fas fa-user-alt-slash awesom-perso ml-1" title="Se déconnecter"></i></a>
                        
                        {% endif %}
                    
                </div>
            </div>
        </div>



    </header>


{% block body %}{% endblock body %}

</body>

</html>

