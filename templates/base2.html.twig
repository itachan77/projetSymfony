
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        
                
        {% block stylesheets %}
        <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous"
        />
        {{encore_entry_link_tags('app')}}
        {% endblock %}
        
        
    </head>

    <body>

        
        <header>

            
            <h1><a href="{{ path('route_liste') }}">Liste des élèves</a></h1>
            
            
            
            
            <form action="{{action}}" method="post">
                
                <select name="leleve"> 
        
                    {% for eleve in eleves %}
                    <option value="{{eleve.id}}"><a href="{{ path('route_particulier', {id: eleve.id}) }}">{{eleve}}</a></option>
                    {% endfor %}
        
                </select>
        
                <input type="submit" name="direleve" value="OK">
            
            
            </form>
        
            <hr />
        </header>


        {% block body %}
        
        {% endblock %}

        {% block javascripts %}
        {{encore_entry_script_tags('app')}}
        {% endblock %}
    </body>
</html>
