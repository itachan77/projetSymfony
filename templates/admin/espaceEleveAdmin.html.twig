{% extends 'header.html.twig' %}

{% block title %}Voir l'espace élève{% endblock %}


{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/style_adform.css') }}">
{% endblock %}


{% block body %}


    

<div class="text-center h1 mt-5">
    Voir l'espace élève
</div>

<div class="marketting mt-5">
    <div class="row text-center">
        {% for row in eleves %}
        <div class="col-sm-4 mt-5">

            <img class="rounded-circle" src="{{ asset('img_eleve/'~ row.photoEleve) }}" alt="Photo de {{row.prenomEleve}}" width="140" height="140"> 
            
            <h2>{{row.nomEleve}} {{row.prenomEleve}} 
                
        {% for row in row.user %}
                {{row.id}}
        {% endfor %}

            </h2>



            <p><a class="btn btn-secondary" href="{{ path('voirEspaceEleve', {idEspace: 
                row.id
            }) }}" role="button">Voir l'espace</a></p>

        </div>
        {% endfor %}
    </div>
</div>




{% endblock body %}