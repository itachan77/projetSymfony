{% extends 'header_scuola.html.twig' %}

{% block title %}ESPACE ELEVE DE LA SCUOLA{% endblock title %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/espaceEleve/style_espace.css') }}">
{% endblock stylesheets %}


{% block body %}
    

<div class="container-fluid mt-2">

        <div class="row">
            <div id="espaceVertical" class="col-sm-2">
            </div>

            <div id="ContenuElev" class="col-sm-10">
                <div>
                    <h1 id="titre" class="text-center">Accueil</h1>
                    
                </div>

                <!-- Le contenu de l'espace ici -->
 
                <div class="row">

                    <div class="mt-5 col-sm-12 ">

                        <div class="text-center">
                            <h1>BIENVENUE {{user.eleve.prenomEleve}}</h1>
                            <h5>L'espace élève regroupe les informations qui vous sont propres.</h5>
                            <h5>Vous pouvez consulter les documents mis à votre disposition par votre professeur et gérer vos informations personnelles.</h5>
                        </div>

                    </div>


                    <div class="mt-5 col-sm-12">
                        <div class="text-center col-7 h1 border border-dark bg-dark text-white">Mes messages</div>

                        <div class="col-sm-12 row">

                            <div class="h4 col-2">Date : </div>
                            <div class="h4 col-3">Objet : </div>
                            <div class="h4 col-7">Message : </div>

                        </div>
                        
                        {% for row in sonMail %}
                        <div class="col-sm-12 row">
                            <div class="col-2">
                                {{ trans_day_hash[row.dateMail|date("l")] }}
                                {{ row.dateMail|date("d") }}
                                {{ trans_month_hash[row.dateMail|date("F")] }}
                                {{ row.dateMail|date("Y") }}
                                {{ row.dateMail|date("- H:i") }}
                            </div>

                            <div class="col-3">
                            {{row.objetMail}}
                            </div>

                            <div class="col-7">
                            {{row.messageMail}}
                            </div>
                        </div>
                        {% endfor %}
                    
                    </div>

                </div>

            </div>

        </div>

</div>

{% endblock body %}
