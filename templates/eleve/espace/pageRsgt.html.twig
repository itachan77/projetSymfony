{% extends 'header_scuola.html.twig' %}

{% block title %}ESPACE ELEVE DE LA SCUOLA{% endblock title %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/espaceEleve/style_espace.css') }}">
{% endblock stylesheets %}


{% block body %}
    

<div class="container-fluid mt-2">

        <div class="row">
            <div id="espaceVertical" class="col-sm-2">
            </div>

            <div id="ContenuElev" class="col-sm-10">
                <div>
                    <h1 id="titre" class="text-center">MES RENSEIGNEMENTS</h1>
                    
                </div>

                <!--Message session de confirmation de prise en compte des modifications-->
                <div class="text-center mt-2 mb-3">
                    <div>&nbsp;</div>
                    
                    {% for message in app.session.flashbag.get('message') %}
                    <span class="alert alert-{{ app.session.get('statut')}}">
                        {{message}}
                    </span>
                    {% endfor %}
                </div>

                <!-- Le contenu de l'espace ici -->
                <div class="row w-75 mb-5 mx-auto">

                        <div class="text-center mx-auto col-sm-12 w-100 col-md-6 w-25">
                            {{form_start(form_update)}}
                            {{form_errors(form_update)}}

                            <div>
                                {{form_label(form_update.nomEleve, "Nom :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                                {{form_widget(form_update.nomEleve,{'attr':{'class':'form-control'}})}}
                                {{form_errors(form_update.nomEleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.prenomEleve, "Prénom :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.prenomEleve,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.prenomEleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.naissanceEleve, "Date de naissance :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                                    <div>
                                    {{form_widget(form_update.naissanceEleve,{'attr':{'class':''}})}}
                                    {{form_errors(form_update.naissanceEleve)}}
                                    </div>
                            </div>

                            <div>
                            {{form_label(form_update.adresseEleve, "Adresse :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.adresseEleve,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.adresseEleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.cpville, "Code postal :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.cpville,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.cpville)}}
                            </div>


                        </div>

                        <div class="text-center w-25 mx-auto col-sm-12 w-100 col-md-6 w-25">
                            <div>
                            {{form_label(form_update.emailEleve, "Email :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.emailEleve,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.emailEleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.tel1Eleve, "Téléphone 1 :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.tel1Eleve,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.tel1Eleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.tel2Eleve, "Téléphone 2 :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.tel2Eleve,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.tel2Eleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.tel3Eleve, "Téléphone 3 :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.tel3Eleve,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.tel3Eleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.tel4Eleve, "Téléphone 4 :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.tel4Eleve,{'attr':{'class':'form-control'}})}}
                            {{form_errors(form_update.tel4Eleve)}}
                            </div>

                            <div>
                            {{form_label(form_update.photoEleve, "Modifier ma photo :", {'label_attr': {'class': 'h6 mt-4'}}) }}
                            {{form_widget(form_update.photoEleve)}}
                            {{form_errors(form_update.photoEleve)}}
                            </div>

                        </div>
                        
                    <div class="mx-auto mt-5">{{form_row(form_update.modifier,{'attr':{'class':'btn btn-danger'}})}}</div>
                        
                        {{form_end(form_update)}}
                    
                </div>

            </div>

        </div>

</div>

{% endblock body %}
