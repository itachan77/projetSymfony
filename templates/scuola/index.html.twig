{% extends 'header_scuola.html.twig' %}

{% block title %}
ECOLE DE MUSIQUE LA SCUOLA
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/scuola/style_sbody.css') }}">

{% endblock %}




{% block body %}

<!-- CAROUSEL -->

    <div class="container-fluid" style="background-color:black;">    

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="{{ asset('images/scuola/slide2.jpg') }}" class="d-block w-100" alt="...">
                </div>
                {% for row in SlidesAll %}
                    <div class="carousel-item">
                        <img id="{{row.fichierSlide}}" src="{{ asset('images/scuola/'~ row.fichierSlide) }}" class="d-block w-100" alt="slide">
                    </div>
                {% endfor %}

            </div>

            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="fas fa-arrow-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="fas fa-arrow-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
            
        </div>

    </div>
    

<!-- GESTION ADMINISTRATEUR -->
    <div class="container">

        {% if is_granted('ROLE_ADMIN') %} 

        <div class="row">
            <div class="col-sm-12">
                {{form_start(form_insert)}}
                {{form_errors(form_insert)}}
                <div class="mx-auto mt-2 text-center">{{form_widget(form_insert.fichierSlide,{'attr':{'class':'btn btn-dark'}})}}</div>
                {{form_errors(form_insert.fichierSlide)}}
                <div class="mx-auto mt-2 text-center">{{form_row(form_insert.ajouter,{'attr':{'class':'btn btn-dark'}})}}</div>
                <div id="btnSupprimer" class="mx-auto mt-2 text-center"><a class="btn btn-danger">Supprimer</a></div>
                <div id="btnMasquerSupp" class="mx-auto mt-2 text-center"><a class="btn btn-danger">Masquer Supprimer</a></div>

            </div>

            <div id="blocSupp" class="col-sm-12 mt-5">

                <div class="row">

                    {% for row in SlidesAll %}

                    <div class="col-sm-3 mt-2">
                        <div><img id="imgSuppr" src="{{ asset('images/scuola/'~ row.fichierSlide) }}" alt="slide" width="100%"></div>
                        
                        <div class="mt-2 text-center"><a class="btn btn-danger" href="{{ path('scuola_slide_delete', {'id':row.id} )}}">Supprimer</a></div>
                    </div>

                    {% endfor %}

                </div>

            </div>

        </div>

    {{form_end(form_insert)}}

        {% endif %} 
    </div>


<!-- PRESENTATION -->
<div class="container-fluid">


        <section id="titre_accueil">
            <div id="bienvenue"></div>
            <div id="bienvenue1"></div>
            <div id="bienvenue2"></div>

            <div id="ecole"></div>
            <div id="adresse1"></div>
            <div id="adresse2"></div>
        </section>

        <section id="section_piano" class="row">

            <div class="col-sm-12 col-md-6">
                <img class="" src="{{ asset('images/scuola/corde.jpg') }}" width="120%" alt="piano en bois">
            </div>
            
            <object class=" col-sm-12 text-center col-md-3 mx-auto mt-5" width="250px" height="250px">					   
                <param name="movie" value="https://www.youtube.com/v/A9SlJuJWuHQ?autoplay=0&amp;&amp;rel=0;feature=%3Eplayer_embedded"></param>
                <param name="wmode" value="transparent"></param>			  	
                <embed src="https://www.youtube.com/v/A9SlJuJWuHQ?autoplay=1&amp;&amp;rel=0;feature=%3Eplayer_embedded" type="application/x-shockwave-flash" wmode="transparent" width="425" height="355"></embed>
            </object>

            <object class=" col-sm-12 text-center col-md-3 mx-auto mt-5" width="250px" height="250px">				   
                <param name="movie" value="https://www.youtube.com/v/nbUVkOAGsBo?&amp;&amp;rel=0;feature=%3Eplayer_embedded"></param>
                <param name="wmode" value="transparent"></param>
                <embed src="https://www.youtube.com/v/nbUVkOAGsBo?&amp;&amp;rel=0;feature=%3Eplayer_embedded" type="application/x-shockwave-flash" wmode="transparent" width="425" height="355"></embed>
            </object>
            

        </section>

    <section id="bande">
        <img class="img-fluid" src="{{ asset('images/scuola/pianoBois.jpg') }}" alt="piano en bois">

        
    </section>

</div>
    



