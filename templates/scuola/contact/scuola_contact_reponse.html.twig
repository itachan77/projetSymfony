{% block title %}REPONSE AU MESSAGE{% endblock %}


{% extends 'haut_admin.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin/style_contact.css') }}">
{% endblock %}


{% block body %}

<div class="container">


    <h1 class="text-center pb-5"><a href="www.la-scuola.fr">SCUOLA.FR</a></h1>
    <!-- le message ci-dessous provient du message renseigné dans le formulaire du site de la SCUOLA  (contact.html.twig) -->
    <!-- messageAenvoyer|raw -->
        
    <div class="row">
    <div class="text-center col-sm-12">
        {{validation|raw|nl2br}}  
    <div class="col-sm-12">
        <h1>Vous avez reçu un message de {{leContact.titreContact}} {{leContact.nomContact}} {{leContact.prenomContact}} :</h1>
    </div>        

    <div class="col-sm-12">
        <h3>Cette personne a {{leContact.ageContact}}.</h3>
    </div>

    <div class="col-sm-12">
        <h3>Voici son message :</h3>
        <h3 class="text-danger ml-5 pb-5">{{leContact.messageContact|nl2br}}</h3>
    </div>

    <div class="col-sm-12">        

        {{form(form_insert)}}
        

    </div>

    <div class="col-sm-12 text-left">     
        <h5>Votre dernière réponse à : {{leContact.titreContact}} {{leContact.nomContact}} </h5>
        
        <p class="text-danger">{{leContact.reponseContact|raw|nl2br}}</p>

    </div>

</div>


{% endblock %}
