{% extends 'header_scuola.html.twig' %}

{% block title %}
La Scuola - Nous contacter
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/scuola/style_sbody.css') }}">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Charm:wght@700&family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
{% endblock %}


{% block body %}
<div id="contact">

	<div class="container-fluid">

	<div id="letitre" class="mt-3 text-center">Nous contacter</div>

	<div id="formulaire_contact" class="container py-5">

	{{form_start(form_insert)}}
	{{form_errors(form_insert)}}
		
		{{validation|raw|nl2br}}

		<div class="row">
			<span class="col-sm-12" id="indic"></span>
				<fieldset class="col-sm-12 row">
					<legend>Identité</legend>
					

					<div class="col-sm-12 col-md-4">
						{{form_label(form_insert.titreContact,'Titre :', {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
						{{form_widget(form_insert.titreContact,{'attr':{'class':'form-control'}})}}
						{{form_errors(form_insert.titreContact)}}
					</div>

					<div class="col-sm-12 col-md-4">
						{{form_label(form_insert.nomContact,'Votre nom :', {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
						{{form_widget(form_insert.nomContact,{'attr':{'class':'form-control','id':'nom'}})}}
						{{form_errors(form_insert.nomContact)}}
					</div>

					<div class="col-sm-12 col-md-4">
						{{form_label(form_insert.prenomContact,'Votre prénom :', {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
						{{form_widget(form_insert.prenomContact,{'attr':{'class':'form-control'}})}}
						{{form_errors(form_insert.prenomContact)}}
					</div>

				</fieldset>


				<fieldset class="col-sm-12 row">
					<legend class="pt-2">Informations</legend>

					<div class="col-sm-12 col-md-6">
						{{form_label(form_insert.emailContact,'Votre adresse mail :', {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
						{{form_widget(form_insert.emailContact,{'attr':{'class':'form-control'}})}}
						{{form_errors(form_insert.emailContact)}}
					</div>

					<div class="col-sm-12 col-md-6">
						{{form_label(form_insert.ageContact,'Votre âge :', {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
						{{form_widget(form_insert.ageContact,{'attr':{'class':'form-control'}})}}
						{{form_errors(form_insert.ageContact)}}
					</div>

				</fieldset>

				<fieldset class="col-sm-12">
					<legend class="pt-2">Votre message</legend>
					{{form_label(form_insert.messageContact,'Votre message :', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
					{{form_widget(form_insert.messageContact,{'attr':{'class':'areaperso','id':'message'}})}}
					{{form_errors(form_insert.messageContact)}}
				</fieldset>

				<div class="row mx-auto">

					<div>{{form_row(form_insert.Envoyer,{'attr':{'class':'btn btn-dark w-100 mx-auto'}})}}</div>
					<div><input class="btn btn-dark w-100 mx-auto" type="reset" name="reset" id="reset"></div>
				</div>
			
		</div>

	{{form_end(form_insert)}}

	</div>

	</div>

</div>

{% block javascript %}
<script src="{{ asset('js/scuola/contact.js') }}"></script>
{% endblock %}


{% endblock body %}



